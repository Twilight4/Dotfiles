{
    // Workspaces
    "hyprland/workspaces" : {
		"format": "{icon}",
        "on-click": "activate",
		"sort-by-number": true,
        "all-outputs": true,
        "active-only": false,
		"sort-by-number": true,
		"format-icons": {
			"1": " ",
			"2": " ",
			"3": " ",
			"4": " ",
			"5": " ",
			"6": "󱎫 ",
			"7": " ",
		},
        "persistent_workspaces": {
             "*": 6
        }
    },

    // Taskbar
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 18,
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close",
        "ignore-list": [
           "Alacritty"
        ],
        "app_ids-mapping": {
            "firefoxdeveloperedition": "firefox-developer-edition"
        },
        "rewrite": {
            "Firefox Web Browser": "Firefox",
            "Foot Server": "Terminal"
        }
    },

    // Hyprland Window
    "hyprland/window": {
        "rewrite": {
            "(.*) - Brave": "$1",
            "(.*) - Chromium": "$1",
            "(.*) - Brave Search": "$1",
            "(.*) - Outlook": "$1",
            "(.*) Microsoft Teams": "$1"
        },
        "separate-outputs": true
    },

    // Cliphist
    "custom/cliphist": {
        "format": "",
        "on-click": "sleep 0.1 && ~/.config/rofi/applets/bin/cliphist.sh",
        "on-click-right": "sleep 0.1 && ~/.config/rofi/applets/bin/cliphist.sh d",
        "on-click-middle": "sleep 0.1 && ~/.config/rofi/applets/bin/cliphist.sh w",
        "tooltip": false
    },

    // Updates Count
    "custom/updates": {
        "format": " {}",
        "tooltip-format": "{}",
        "escape": true,
        "return-type": "json",       
        "exec": "~/.config/waybar/scripts/updates.sh",
        "restart-interval": 60,
        "on-click": "kitty -1 -e ~/.config/.local/bin/sys-update.sh",
        "tooltip": false
    },
    
    // Wallpaper
    "custom/wallpaper": {
        "format": "",
        "on-click": "~/.config/hypr/scripts/wallpaper select",
        "on-click-right": "~/.config/hypr/scripts/wallpaper",
        "tooltip": false
    },

    // Waybar Themes
    "custom/waybarthemes": {
        "format": "",
        "on-click": "~/.config/hypr/scripts/waybar-switch-theme.sh",
        "tooltip": false
    },

    // Keybindings
    "custom/keybindings": {
        "format": "",
        "on-click": "~/.config/rofi/applets/bin/keybinds.sh",
        "tooltip": false
    },

    // Filemanager Launcher
    "custom/filemanager": {
        "format": "",
        "on-click": "nautilus",
        "tooltip": false
    },

    // Mercury Launcher
    "custom/browser": {
        "format": "",
        "on-click": "~/.config/hypr/ws-scripts/ws-floorp",
        "tooltip": false
    },

    // ChatGPT Launcher
    "custom/chatgpt": {
        "format": "",
        "on-click": "xdg-open https://chat.openai.com",
        "tooltip": false
    },

    // QEMU Launcher
    "custom/qemu": {
        "format": "<span font='18'></span> <span font='16'></span>",
        "on-click": "virt-manager",
        "tooltip": false
    },

    // KeepassXC Launcher
    "custom/keepass": {
        "format": "<span font='17'>󰌆</span> <span font='16'></span>",
        "on-click": "keepassxc",
        "tooltip": false
    },

    // Calculator
    "custom/calculator": {
        "format": "",
        "on-click": "gnome-calculator",
        "tooltip": false
    },

    // Windows VM
    "custom/windowsvm": {
        "format": "",
        "on-click": "~/.config/.local/bin/run-vm.sh",
        "tooltip": false
    },

    // Rofi Application Launcher
    "custom/appmenu": {
        "format": "Apps",
        "on-click": "rofi -show drun -replace -theme ~/.config/rofi/launcher/style.rasi",
        "on-click-right": "~/.config/rofi/applets/bin/keybinds.sh",
        "tooltip": false
    },
    
    // Power Menu
    "custom/exit": {
        "format": "",
        "on-click": "wlogout",
        "tooltip": false
    },

    // Keyboard State
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "",
            "unlocked": ""
        }
    },

    // System tray
    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },

    // Clock
    "clock": {
        // "timezone": "America/New_York",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}"
    },

    // CPU
    "cpu": {
		"format": "<span font='13'></span> <span font='13'>{usage}%</span>",
        "on-click": "kitty -1 -e cpufetch"
    },

    // Memory
    "memory": {
        "format": " {}%",
    },

	// Cputemp
	"custom/cputemp":{
		"format": "<span font='12' rise='2000'></span> {}",
		"exec": "~/.config/waybar/scripts/cpu-temp.sh",
		"interval": 15,
	},

	// Uptime
	"custom/uptime":{
		"format": " {}",
		"exec": "~/.config/waybar/scripts/upt.sh",
		"interval": 60,
	},

	// Weather
	"custom/weather": {
		"tooltip": true,
		"format": "{}",
		"interval": 300,
		"exec": "~/.config/waybar/scripts/weather.sh",
        "on-click": "gnome-weather",
		"return-type": "json",
	},

    // Harddisc space used
    "disk": {
        "interval": 30,
        "format": " {percentage_used}%",
        "path": "/",
    }, 
    
    // Network
    "network": {
        "format": "{ifname}",
        "format-wifi": " {signalStrength}%",
        "format-ethernet": "  {ipaddr}",
        "format-disconnected": "Not connected", //An empty format will hide the module.
        "tooltip-format": " {ifname} via {gwaddri}",
        "tooltip-format-wifi": "   {essid} ({signalStrength}%)",
        "tooltip-format-ethernet": "  {ifname} ({ipaddr}/{cidr})",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50,
        "on-click": "fooclient -e nmtui"
    },

    // Battery
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": "  {capacity}%",
        "format-plugged": "  {capacity}%",
        "format-alt": "{icon}  {time}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": [" ", " ", " ", " ", " "]
    },

    // Pulseaudio
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{icon}{volume}%",
        "format-bluetooth": "{volume}% {icon} {format_source}",
        "format-bluetooth-muted": " {icon} {format_source}",
        "format-muted": " {format_source}",
        "format-source": "{volume}% ",
        "format-source-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", " ", " "]
        },
        "on-click": "pavucontrol"
    },

    // Bluetooth
    "bluetooth": {
        "format-disabled": "",
        "format-off": "",
        "interval": 30,
        "on-click": "blueberry"
    },

    // Other
    "user": {
        "format": "{user}",
        "interval": 60,
        "icon": false,
    }
}
