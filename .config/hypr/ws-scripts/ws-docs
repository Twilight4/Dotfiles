#!/bin/bash

# Function to check if kitty-docs is running
is_kitty_running() {
  hyprctl clients | grep 'kitty-docs' >/dev/null
}

# Check if monitor DP-2 is active
if hyprctl monitors | grep -q "Monitor DP-2"; then
    # If DP-2 is active, switch to workspace 12
    hyprctl dispatch workspace 12
else
    # If DP-2 is not active, switch to workspace 6
    hyprctl dispatch workspace 6
fi

# Check if kitty-docs is running
if ! is_kitty_running; then
  # If kitty-docs is not running, launch it
  hyprctl dispatch exec 'kitty -1 -o confirm_os_window_close=1 -T kitty-docs --class kitty-docs --session ~/.config/kitty/session-docs'
else
  # If kitty-docs is running, focus on its window
  hyprctl dispatch focuswindow 'kitty-docs'
fi
