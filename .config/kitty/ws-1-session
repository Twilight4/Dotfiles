# Set the layout in this tab
layout tall
# Set the working directory for windows in the current tab
cd ~
# Create a window (title sets the tab title)
launch --title cli zsh

# Create a new tab
new_tab file-explorer
cd ~/documents
# Set the layout in this tab
layout tall
# Set the current layout
layout tall
launch sh -c "nnn -Ra"
# Focus the current tab
focus

# Create a new tab
new_tab news
cd ~
# Set the layout in this tab
layout tall
# Set the current layout
layout tall
launch sh -c "newsboat"
