# Create a new tab
new_tab cpu/fans
# Set the layout in this tab
layout tall
# Set the working directory for windows in the current tab
cd ~/
# Create a window (title sets the tab title)
launch --title cpu-temp watch -n 0.5 sensors zenpower-pci-00c3
# Create a window (title sets the tab title)
launch --title fans watch -n 0.5 sudo ~/.config/.local/bin/omen-fan i
# Focus this tab
focus

