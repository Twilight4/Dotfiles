# general
alias ls='ls -lah --color=auto'
alias ga='git add'
alias gc='git commit'
alias gp='git push'
alias vim='nvim'

# colorize grep output (good for log files)
alias grep='grep --color=auto'

# systemd
alias gcm="git checkout master"
alias gcs="git checkout stable"

